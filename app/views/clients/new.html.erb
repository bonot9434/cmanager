<%= form_with model: @client, local:true do |f| %>
  <div><%= f.label "名前" %>
  <%= f.text_field :name %></div>
  <div><%= f.label "郵便番号" %>
  <%= f.text_field :postal_code %></div>
  <div><%= f.label "住所" %>
  <%= f.text_field :address %></div>
  <div><%= f.label "電話番号" %>
  <%= f.text_field :telephone_number %></div>
  <div><%= f.label "メール" %>
  <%= f.text_field :mail %></div>
  <div><%= f.label "紹介文" %>
  <%= f.text_area :introduction %></div>
  <div><%= f.submit "投稿" %>
<% end %>